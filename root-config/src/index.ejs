			<a onclick="singleSpaNavigate('/react')">
				App1 - React
			</a>
		</div>
		<!--<div class="col-xl-3 tiles">
			<a href = "#/app3">
				App3 - Angular 1.x
			</a>
		</div> -->
		<div class="col-xl-3 tiles">
			<a onclick="singleSpaNavigate('/angular')">
